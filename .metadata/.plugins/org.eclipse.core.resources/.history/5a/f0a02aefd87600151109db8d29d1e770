package dao_module;

import java.util.ArrayList;

import org.json.simple.JSONObject;

import model.Cinema;
import model.Cineplex;

public class CinemaDAO extends JSONDAO{
	
	private JSONObject jsonObject = null;
	private ArrayList<Cinema> cinemas = null;
	
	public CinemaDAO(){
		this.jsonObject = readFile(JSONDAO.cineplexPath);
		parseJSON();
	}
	
	public ArrayList<Cinema> getCinemaByCinemaId(String cinemaId){
		ArrayList<Cinema> results = null;
		return results;
	}
	public ArrayList<Cinema> getCinemaByCineplex(Cineplex cineplex){
		ArrayList<Cinema> results = null;
		
		if(this.cinemas!=null&&this.cinemas.size()>0){
			for(int i=0;i<this.cinemas.size();i++){
				if(this.cinemas.get(i).getCineplex().equals(cineplex)){
					results.add(this.cinemas.get(i));
				}
			}
		}
		
		return results;
	}
	
	
	
	
	
