package model;

import java.util.ArrayList;

public class Cinema {
	private String cinemaCode;
	private CINEMACLASS cinemaClass;
	private ArrayList[][]  seats;
	private Cineplex cineplex;
	
	public Cinema(Cineplex cineplex, CINEMACLASS cinemaClass, ArrayList[][]seats){
		setCineplex(cineplex);
		setCinemaCode(cineplex.getName().substring(0, 2)+cineplex.getCinemas().size()+1);
		setCinemaClass(cinemaClass);
		setSeats(seats);
	}
	
	public String getCinemaCode() {
		return cinemaCode;
	}

	public void setCinemaCode(String cinemaCode) {
		this.cinemaCode = cinemaCode;
	}

	public CINEMACLASS getCinemaClass() {
		return cinemaClass;
	}

	public void setCinemaClass(CINEMACLASS cinemaClass) {
		this.cinemaClass = cinemaClass;
	}

	public ArrayList[][] getSeats() {
		return seats;
	}

	public void setSeats(ArrayList[][] seats) {
		this.seats = seats;
	}

	public Cineplex getCineplex() {
		return cineplex;
	}

	public void setCineplex(Cineplex cineplex) {
		this.cineplex = cineplex;
	}
	
}
